{
  "name": "better-campus",
  "description": "Browser-extension with nice looking skin for fhstp ecampus",
  "version": "1.0.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://ecampus.fhstp.ac.at/*"
      ],
      "js": [
        "src/base.js"
      ],
      "css": [
        "src/base.css"
      ]
    }
  ],
  "action": {
    "default_popup": "src/popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "logo.png"
      ],
      "matches": [
        "https://ecampus.fhstp.ac.at/*"
      ]
    }
  ]
}
